@model IEnumerable<Vidak.Models.Customer>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table">
	<caption>List of customers</caption>
	<thead>
	<tr>
		<th scope="col">Customer</th>
		<th scope="col">Discount Rate</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var customer in Model)
	{
		<tr>
			<td>@Html.ActionLink((string) customer.Name, "Details", "Customers", new {id = customer.Id}, null)</td>
			<td>@customer.MembershipType.Name</td>
		</tr>
	}
	</tbody>
</table>


